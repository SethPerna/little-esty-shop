<h1><%= @merchant.name %></h1>

<%= link_to "Merchant Items", "/merchants/#{@merchant.id}/items" %>

<%= link_to "Merchant Invoices", "/merchants/#{@merchant.id}/invoices" %>

<section id = "items_ready_to_ship" >
  <h4>Items Ready to Ship:</h4>
  <p><% @merchant.ordered_items_to_ship.each do |item| %>
      <li><%= item.name %> - Invoice #<%= link_to item.invoice_ids[0], "/merchants/#{@merchant.id}/invoices/#{item.invoice_ids[0]}" %>
      <%= item.created_at.strftime("%A, %B %-d, %Y") %></li>
    <% end %>
  </p>
</section>