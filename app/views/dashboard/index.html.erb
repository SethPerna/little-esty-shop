<h1><%= @merchant.name %></h1>

<%= link_to "Merchant Items", "/merchants/#{@merchant.id}/items" %>

<%= link_to "Merchant Invoices", "/merchants/#{@merchant.id}/invoices" %>

<section id="ready_to_ship">
  <h3>Items Ready to Ship</h3>
  <ul>
    <% @merchant.ready_to_ship.each do |invoice_item| %>
    <li>
      Item: <%= invoice_item.item_name %> - Invoice Date: <%= invoice_item.invoice.created_at.strftime("%A, %B %d, %Y") %>
    </li>
    <% end %>
  </ul>
</section>


<section id="top_five_customers">
  <h3>Top Five Customers</h3>
  <ol>
    <% @merchant.top_five_customers.each do |customer| %>
      <li>
        Customer: <%= customer.full_name %> - Total Transactions: <%= customer.total_transactions %>
      </li>
    <% end %>
  </ol>
</section>
