<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |form| %>
  <%= form.label :name, 'Name' %>
  <%= form.text_field :name, value: @item.name %>
  <%= form.label :description, 'Description' %>
  <%= form.text_field :description, value: @item.description %>
  <%= form.label :unit_price, 'Unit Price' %>
  <%= form.text_field :unit_price, value: @item.unit_price %>
  <%= form.submit 'Submit' %>
<% end %>
