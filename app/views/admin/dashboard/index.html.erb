<h2>Admin Dashboard</h2>

<p><%= link_to "Merchants", "/admin/merchants" %></p>
<p><%= link_to "Invoices", "/admin/invoices" %></p>
<p>Incomplete Invoices:</p>
<% @invoices.ordered_invoices.each do |invoice| %>
  <% invoice.incomplete_invoices.each do |invoice_item| %>
    <%= link_to "#{invoice_item.invoice_id}", "/admin/invoices/#{invoice_item.invoice_id}" %>
    <p>Created: <%= invoice.created_at.strftime("%A, %B %d, %Y") %></p>
    <hr>
  <% end %>
<% end %>
<section id="top_five_customers">
  <h3>Top Five Customers</h3>
    <ol>
      <% @customers.top_five_customers.each do |customer| %>
        <li>Name: <%= customer.full_name %> - <%= customer.trans_count %></li>
      <% end %>
    </ol>
</section>
