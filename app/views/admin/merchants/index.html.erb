  <div id="enabled_merchants">
    <h3>Enabled Merchants:</h3>
    <% @enabled_merchants.each do |merchant| %>
      <p>Name: <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %></p>
      <p>Status: <%= merchant.status %></p>
      <%= button_to "Disable", '/admin/merchants', method: :patch, params: {status: 'disable', id: merchant.id} %>
    <% end %>
  </div>

  <div id="disabled_merchants">
    <h3>Disabled Merchants:</h3>
    <% @disabled_merchants.each do |merchant| %>
      <p>Name: <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %></p>
      <p>Status: <%= merchant.status %></p>
      <%= button_to "Enable", '/admin/merchants', method: :patch, params: {status: 'enable', id: merchant.id} %>
    <% end %>
  </div>

<%= link_to "Add Merchant", '/admin/merchants/new', method: :get%>
